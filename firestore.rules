rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCreatingOwnData() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    function isOwnData() {
      return resource.data.userId == request.auth.uid;
    }
    
    // Users collection - usuários só podem ler/escrever seus próprios dados
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
    
    // Tasks collection - usuários só podem acessar suas próprias tasks
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && isOwnData();
      allow create: if isAuthenticated() && isCreatingOwnData();
      allow update, delete: if isAuthenticated() && isOwnData();
    }
    
    // Vouchers collection - leitura pública para autenticados, escrita bloqueada
    match /vouchers/{voucherId} {
      allow read: if isAuthenticated();
      // Bloqueado - configure vouchers manualmente no Firebase Console
      allow create, update, delete: if false;
    }
    
    // Redeemed vouchers - usuários só acessam seus próprios
    match /redeemedVouchers/{voucherId} {
      allow read: if isAuthenticated() && isOwnData();
      allow create: if isAuthenticated() && isCreatingOwnData();
      allow update, delete: if isAuthenticated() && isOwnData();
    }
    
    // User vouchers (caso use outra coleção)
    match /userVouchers/{userVoucherId} {
      allow read: if isAuthenticated() && isOwnData();
      allow create: if isAuthenticated() && isCreatingOwnData();
      allow update, delete: if isAuthenticated() && isOwnData();
    }
    
    // Stats/Analytics - apenas leitura/escrita para o próprio usuário
    match /userStats/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Impede deleção acidental
    }
    
    // Test connection (opcional - para debug)
    match /test/connection {
      allow read: if isAuthenticated();
    }
    
    // Bloqueia acesso a qualquer outra coleção não especificada
    match /{document=**} {
      allow read, write: if false;
    }
  }
}